<% flat = data.flats[owner] %>

<div class="flat-banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../images/<%=flat.picture%>');">
</div>

  <div class="wrapper-flat-booking">
    <div class="profile">
      <div class="profile-avatar">
        <%= image_tag flat.owner_picture, class: "avatar-very-large" %>
        <p> <%=flat.owner_firstname.upcase %> </p>
      </div>
      <div class="profile-information">
        <h2> <%=flat.summary %> </h2>
        <p> <%=flat.city %> </p>
        <i class="fa fa-star" style="color: #ffb400"></i>
        <i class="fa fa-star" style="color: #ffb400"></i>
        <i class="fa fa-star" style="color: #ffb400"></i>
        <i class="fa fa-star" style="color: #ffb400"></i>
        <i class="fa fa-star" style="color: #cacccd"></i>
      </div>


    </div>

    <div class="booking">
      <h2>Book this flat</h2>
      <form action="#">
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="checkin">
          </div>
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="checkout">
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">

          <select name="" id="" class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-red btn-lg" value="Book it">
      </div>
    </form>
    </div>
  </div>


<div class="container">
<h2>About this flat</h2>
<h3> This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur. </h3>

</div>




